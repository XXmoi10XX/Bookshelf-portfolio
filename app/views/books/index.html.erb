<h1><%= "本名簿" %></h1>


<%= form_tag :search_books, method: :get, class: "search" do %>
<%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索"%>
<% end %>



  <div class="toolbar"><%= link_to "本の新規登録",:new_book %></div>
  <table class="list">
  <thead>
    <tr>
      <th>著者名</th>
      <th>書籍名</th>
      <th>出版社</th>
    </tr>
  </thead>
<tbody>
  <% @books.each do |book|%>
  <tr>
  <td style="text-align: right"><%= book.author%></td>
  <td><%= link_to book.title,book %></td>
  <td><%= book.publisher %></td>
  </tr>
  <% end %>
</tbody>
</table>
<%= paginate @books %>
